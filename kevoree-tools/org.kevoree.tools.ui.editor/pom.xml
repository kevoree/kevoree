        <!-- AETHER EMBEDDED REPO API -->
        <dependency>
            <groupId>org.kevoree.tools</groupId>
            <artifactId>org.kevoree.tools.aether.framework</artifactId>
            <version>${kevoree.version}</version>
        </dependency>


    </dependencies>

    <repositories>
        <repository>
            <id>fuseRepo</id>
            <url>http://repo.fusesource.com/nexus/content/repositories/public/</url>
        </repository>
    </repositories>


    <build>
        <plugins>

            <plugin>
                <groupId>org.kevoree.extra</groupId>
                <artifactId>org.kevoree.extra.osgi.sysgen</artifactId>
                <version>${kevoree.version}</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <filters>
                                scala,org.ops4j,org.eclipse.emf,org.slf4j,org.kevoree,org.kevoree.tools
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

