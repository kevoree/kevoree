<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.kevoree.tools.annotator.standalone</artifactId>
    <packaging>jar</packaging>
    <name>Kevoree :: Tools :: Annotator :: Standalone</name>
    <version>3.6.3-SNAPSHOT</version>

    <parent>
        <artifactId>org.kevoree.tools.root</artifactId>
        <groupId>org.kevoree.tools</groupId>
        <version>3.6.3-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <dependencies>
        <dependency>
            <groupId>org.kevoree.tools</groupId>
            <artifactId>org.kevoree.tools.annotator</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.wvengen</groupId>
                <artifactId>proguard-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>proguard</id>
                        <phase>package</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <outjar>${project.build.finalName}.jar</outjar>
                    <options>
                        <option>-keep public class org.kevoree.tools.annotator.** { *; }</option>
                        <option>-ignorewarnings</option>
                        <option>-dontobfuscate</option>
                    </options>
                    <libs>
                        <lib>${java.bootstrap.classes}</lib>
                    </libs>
                    <maxMemory>1024m</maxMemory>
                    <assembly>
                          <inclusions>
                              <inclusion>
                                  <groupId>org.kevoree.tools</groupId>
                                  <artifactId>org.kevoree.tools.annotator</artifactId>
                              </inclusion>
                              <inclusion>
                                  <groupId>org.javassist</groupId>
                                  <artifactId>javassist</artifactId>
                              </inclusion>
                          </inclusions>
                    </assembly>
                </configuration>
                <dependencies>
                    <!--
                    <dependency>
                        <groupId>net.sf.proguard</groupId>
                        <artifactId>proguard-base</artifactId>
                        <version>4.11</version>
                    </dependency>
                    -->

                    <dependency>
                        <groupId>net.sf.proguard</groupId>
                        <artifactId>proguard-base</artifactId>
                        <version>5.0</version>
                        <scope>system</scope>
                        <systemPath>${basedir}/../../lib/proguard.jar</systemPath>
                    </dependency>

                    <dependency>
                        <groupId>ant</groupId>
                        <artifactId>ant</artifactId>
                        <version>1.7.0</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>mac</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <java.bootstrap.classes>${java.home}/../jre/lib/rt.jar</java.bootstrap.classes>
            </properties>
        </profile>
        <profile>
            <id>other</id>
            <activation>
                <os>
                    <family>!mac</family>
                </os>
            </activation>
            <properties>
                <java.bootstrap.classes>${java.home}/lib/rt.jar</java.bootstrap.classes>
            </properties>
        </profile>
    </profiles>

</project>
