            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
							<createDependencyReducedPom>true</createDependencyReducedPom>

                            <filters>
                                <filter>
                                    <includes>
                                        <include>org.slf4j:*</include>
                                        <include>ch.qos.logback:*</include>
                                        <include>org.kevoree</include>
                                        <include>org.kevoree.tools:org.kevoree.tools.annotation.api</include>
                                        <include>org.kevoree.tools:org.kevoree.tools.javase.framework</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>

                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>org.kevoree.tools.ui.editor.standalone.App</mainClass>
                                </transformer>
                            </transformers>
							<outputFile>${project.build.directory}/${project.build.finalName}-small.jar</outputFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
			
