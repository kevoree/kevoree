<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>org.kevoree.platform.root</artifactId>
        <groupId>org.kevoree.platform</groupId>
        <version>2.0.0-SNAPSHOT</version>
        <relativePath>../org.kevoree.platform.root/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>org.kevoree.platform.service</artifactId>
    <packaging>jar</packaging>
    <name>Kevoree :: Platform :: Service</name>

    <properties>
        <kevoree.version>${project.version}</kevoree.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.kevoree</groupId>
            <artifactId>org.kevoree.kcl</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.tools</groupId>
            <artifactId>org.kevoree.tools.aether.framework.pack</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-nop</artifactId>
            <version>1.6.4</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>org.kevoree.platform.service.mac</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <java.lib.location>&lt;java.home&gt;/../Classes/classes.jar</java.lib.location>
            </properties>
        </profile>
        <profile>
            <id>org.kevoree.platform.service.other</id>
            <activation>
                <os>
                    <family>!mac</family>
                </os>
            </activation>
            <properties>
                <java.lib.location>${java.home}/lib/rt.jar</java.lib.location>
            </properties>
        </profile>
    </profiles>


    <build>
        <plugins>
            <plugin>
                <groupId>com.pyx4me</groupId>
                <artifactId>proguard-maven-plugin</artifactId>
                <version>2.0.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>net.sf.proguard</groupId>
                        <artifactId>proguard</artifactId>
                        <version>4.7-BETA</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
                <configuration>
                    <injar>${project.build.finalName}.jar</injar>
                    <outjar>${project.build.finalName}.jar</outjar>
                    <obfuscate>false</obfuscate>
                    <maxMemory>1024m</maxMemory>
                    <proguardVersion>4.4</proguardVersion>
                    <options>
                        <option>-keep class jet.** { *; }</option>
                        <option>-keep class kotlin.** { *; }</option>
                        <option>-keep class org.kevoree.framework.** { *; }</option>
                        <option>-keep class org.kevoree.** { *; }</option>
                        <option>-keep public class org.kevoree.platform.service.KevoreeServiceUpdate { *; }</option>
                        <option>-dontnote</option>
                        <option>-dontskipnonpubliclibraryclasses</option>
                        <option>-dontskipnonpubliclibraryclassmembers</option>
                        <option>-dontoptimize</option>
                        <option>-dontobfuscate</option>
                        <option>-keepattributes
                            Exceptions,InnerClasses,Signature,Deprecated,SourceFile,LineNumberTable,*Annotation*,EnclosingMethod
                        </option>
                        <option>-ignorewarnings</option>
                        <option>
                            -keepclassmembers class org.kevoree.framework.**
                        </option>
                    </options>
                    <assembly>
                        <inclusions>
                            <!--<inclusion>
                                <groupId>org.scala-lang</groupId>
                                <artifactId>scala-library</artifactId>
                            </inclusion>-->
                            <inclusion>
                                <groupId>org.jetbrains.kotlin</groupId>
                                <artifactId>kotlin-runtime</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.jetbrains.kotlin</groupId>
                                <artifactId>kotlin-stdlib</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.slf4j</groupId>
                                <artifactId>slf4j-api</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.slf4j</groupId>
                                <artifactId>slf4j-nop</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>fr.inria.jfilter</groupId>
                                <artifactId>jfilter-library</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.kevoree</groupId>
                                <artifactId>org.kevoree.framework</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.kevoree.tools</groupId>
                                <artifactId>org.kevoree.tools.javase.framework</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.kevoree.tools</groupId>
                                <artifactId>org.kevoree.tools.aether.framework.pack</artifactId>
                                <filter>
                                    !org/apache/commons/**,
                                    !org/apache/codec/**,
                                    !META-INF/**
                                </filter>
                            </inclusion>
                            <inclusion>
                                <groupId>org.kevoree</groupId>
                                <artifactId>org.kevoree.model</artifactId>
                            </inclusion>
                        </inclusions>
                    </assembly>
                    <libs>
                        <lib>${java.lib.location}</lib>
                    </libs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>org.kevoree.platform.service.PlatformRunner</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>