<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.kevoree.platform.standalone</artifactId>
    <packaging>jar</packaging>
    <name>Kevoree :: Platform :: Standalone</name>
    <version>2.0.0-SNAPSHOT</version>

    <parent>
        <artifactId>org.kevoree.platform.root</artifactId>
        <groupId>org.kevoree.platform</groupId>
        <version>2.0.0-SNAPSHOT</version>
        <relativePath>../org.kevoree.platform.root/pom.xml</relativePath>
    </parent>

    <properties>
        <kevoree.version>${project.version}</kevoree.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.kevoree.platform</groupId>
            <artifactId>org.kevoree.platform.base</artifactId>
            <version>${kevoree.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.kevoree.tools</groupId>
                    <artifactId>org.kevoree.tools.aether.framework</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <filters>
                                <filter>
                                    <includes>
                                        <include>fr.inria.jfilter:*</include>
                                        <include>org.slf4j:*</include>
                                        <include>ch.qos.logback:*</include>
                                        <include>org.kevoree</include>
                                        <include>org.kevoree.tools:org.kevoree.tools.annotation.api</include>
                                        <include>org.kevoree.tools:org.kevoree.tools.javase.framework</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                        <exclude>META-INF/maven/*.*</exclude>
                                        <exclude>**/*.kt</exclude>
                                        <exclude>**/*.java</exclude>
                                        <exclude>**/*.md</exclude>
                                        <exclude>**/pom.xml</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>org.kevoree.platform.standalone.App</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>


</project>
