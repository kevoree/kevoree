
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kevoree.extra</groupId>
    <artifactId>org.kevoree.extra.root</artifactId>
    <packaging>pom</packaging>
    <version>1.1.0-RC1</version>
    <name>Kevoree :: Extra :: Root</name>
    <url>https://github.com/dukeboard/kevoree</url>

    <properties>
        <emf.version>2.6.0</emf.version>
        <scala.version>2.8.1</scala.version>
        <bundle.vendor>IRISA/INRIA</bundle.vendor>
        <releaseUrl>http://maven.kevoree.org/libs-release-local</releaseUrl>
    </properties>

    <modules>
        <module>../org.kevoree.extra.emf.library</module>
        <module>../org.kevoree.extra.emf.genmodel.mavenplugin</module>
        <module>../org.kevoree.extra.osgi.sysgen</module>
        <module>../org.kevoree.extra.osgi.rxtx</module>
        <module>../org.kevoree.extra.marshalling</module>
		<module>../org.kevoree.extra.protobuf</module>
        <module>../org.kevoree.extra.netty</module>
        <module>../org.kevoree.extra.osgi.xbee</module>
        <module>../org.kevoree.extra.esper</module>
        <module>../org.kevoree.extra.ecj</module>
	</modules>

    <distributionManagement>
    <repository>
        <id>maven.kevoree.org-releases</id>
        <name>maven.kevoree.org-releases</name>
        <url>${releaseUrl}</url>
    </repository>
	</distributionManagement>
    
    <repositories>
        <repository>
            <id>scala-tools.org</id>
            <name>Scala-tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-releases</url>
        </repository>
        <repository>
            <id>kevoree-libs-release-local</id>
            <url>http://maven.kevoree.org/libs-release-local</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>plugin.scala-tools.org</id>
            <name>Plugin Scala-tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-releases</url>
        </pluginRepository>
        <pluginRepository>
            <id>plugin.kevoree-github</id>
            <url>http://maven.kevoree.org/plugins-release-local</url>
        </pluginRepository>
    </pluginRepositories>

</project>
