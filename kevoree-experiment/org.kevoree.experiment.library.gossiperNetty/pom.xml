<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kevoree.experiment</groupId>
    <artifactId>org.kevoree.experiment.library.gossiperNetty</artifactId>
    <packaging>bundle</packaging>
    <name>Kevoree :: Experiment :: Library :: GossiperNettyLogger</name>
    <version>1.0.0</version>

    <properties>
        <kevoree.version>1.1.0-RC2</kevoree.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.kevoree.library.javase</groupId>
            <artifactId>org.kevoree.library.javase.gossiperNetty</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.greg</groupId>
            <artifactId>greg-client-java</artifactId>
            <version>0.1</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.extra</groupId>
            <artifactId>org.kevoree.extra.protobuf</artifactId>
            <version>2.3.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.kevoree.extra</groupId>
            <artifactId>org.kevoree.extra.netty</artifactId>
            <version>3.2.4.Final</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.kevoree.extra</groupId>
            <artifactId>org.kevoree.extra.marshalling</artifactId>
            <version>${kevoree.version}</version>
            <scope>provided</scope>
        </dependency>

    </dependencies>

    <parent>
        <artifactId>org.kevoree.library.javase.root</artifactId>
        <groupId>org.kevoree.library.javase</groupId>
        <version>1.1.0-RC2</version>
    </parent>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Private-Package>
                            org.greg.client.*
                        </Private-Package>
                        <Export-Package>
                            org.kevoree.library.gossiperNetty.*,
                            org.kevoree.experiment.library.gossiperNetty.*
                        </Export-Package>
                        <Import-Package>
                            !org.kevoree.experiment.library.gossiperNetty.*,
                            !org.kevoree.library.gossiperNetty.*,
                            !org.greg.client.*,
                            *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>
                <executions>
                    <execution>
                        <id>scala-compile-first</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>add-source</goal>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>scala-test-compile</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <jvmArgs>
                        <jvmArg>-Xmx1024m</jvmArg>
                    </jvmArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>


</project>
