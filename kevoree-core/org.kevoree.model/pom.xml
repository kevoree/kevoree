                        </relocation>
                    </relocations>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            -->

            <plugin>
                <groupId>org.fusesource.mvnplugins</groupId>
                <artifactId>maven-uberize-plugin</artifactId>
                <version>1.34</version>
                <configuration>
                    <uberGroupFilter>org.kevoree.modeling</uberGroupFilter>
                    <filters>
                        <filter>
                            <artifact>org.kevoree.modeling:org.modeling.microframework</artifact>
                            <excludes>
                                <exclude>**/*.kt</exclude>
                            </excludes>
                        </filter>
                    </filters>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>uberize</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.fusesource.mvnplugins.uberize.transformer.PlexusComponents" />
                                <transformer implementation="org.fusesource.mvnplugins.uberize.transformer.ClassShader">
                                    <relocations>
                                        <relocation>
                                            <pattern>org.kevoree.modeling</pattern>
                                            <shadedPattern>org.kevoree.pmodeling</shadedPattern>
                                        </relocation>
                                    </relocations>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


        </plugins>
    </build>
</project>