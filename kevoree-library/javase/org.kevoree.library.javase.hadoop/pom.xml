            <plugin>
                <groupId>org.kevoree.tools</groupId>
                <artifactId>org.kevoree.tools.annotation.mavenplugin</artifactId>
                <version>${kevoree.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <nodeTypeNames>JavaSENode</nodeTypeNames>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            
            <!-- Felix BnD plugin : allow Bundle packaging : generate OSGi JAR  -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.5</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>
                            org.kevoree.library.hadoop.kevgen,
                            org.kevoree.library.hadoop.*</Export-Package>
                        <Import-Package>
                            !org.kevoree.library.*,
                            org.osgi.*,
                            org.kevoree.*,
                            !com.sun.java.browser.net,
                            com.sun.java_cup.*;resolution:=optional,
                            com.sun.tools.*;resolution:=optional,
                            javax.mail.*;resolution:=optional,
                            kaffe.*;resolution:=optional,
                            *
                        </Import-Package>
                        <Private-Package>
                            org.apache.*,
                            com.sun.*,
                            javax.el.*,
                            javax.servlet.*

                        </Private-Package>
                    </instructions>
                </configuration>
            </plugin>
            <!-- Java compiler plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
