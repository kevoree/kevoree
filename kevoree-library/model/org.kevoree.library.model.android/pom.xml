<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>org.kevoree.library.model.root</artifactId>
        <groupId>org.kevoree.library.model</groupId>
        <version>1.6.0-SNAPSHOT</version>
        <relativePath>../org.kevoree.library.model.root/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>org.kevoree.library.model.android</artifactId>
    <name>Kevoree :: Library :: Model :: Android</name>

    <properties>
        <kevoree.version>${project.version}</kevoree.version>
    </properties>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.5</version>
                <extensions>true</extensions>
            </plugin>
            <plugin>
                <groupId>org.kevoree.tools</groupId>
                <artifactId>org.kevoree.tools.annotation.mavenplugin</artifactId>
                <version>${kevoree.version}</version>
                <extensions>true</extensions>
            </plugin>
            <plugin>
                <groupId>org.kevoree.tools</groupId>
                <artifactId>org.kevoree.tools.merger.mavenplugin</artifactId>
                <version>${kevoree.version}</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <model>${project.build.directory}/classes/KEV-INF/lib.kev</model>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.kevoree.library.android</groupId>
            <artifactId>org.kevoree.library.android.nodeType</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.library.android</groupId>
            <artifactId>org.kevoree.library.android.fakeDomo</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.library.android</groupId>
            <artifactId>org.kevoree.library.android.defaultChannels</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.library.android</groupId>
            <artifactId>org.kevoree.library.android.logger</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.library.android</groupId>
            <artifactId>org.kevoree.library.android.rest</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.library.android</groupId>
            <artifactId>org.kevoree.library.android.text2speech</artifactId>
            <version>${kevoree.version}</version>
        </dependency>

        <dependency>
            <groupId>org.kevoree.library.android</groupId>
            <artifactId>org.kevoree.library.android.agrapher</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
    </dependencies>

</project>